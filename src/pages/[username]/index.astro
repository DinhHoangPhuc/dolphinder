---
import DEV_DATA from "../../data/devs";
import {
  ArrowLeft,
  Link,
  Github,
  Linkedin,
  Globe,
  Wallet,
  Copy,
} from "@lucide/astro";

import Layout from "../../layout.astro";

export function getStaticPaths() {
  // Generate static paths from the devs data
  return DEV_DATA.map((dev) => ({
    params: { username: dev.username },
    props: { dev },
  }));
}

const { dev } = Astro.props;
---

<Layout title={`${dev.name} - Developer Profile`}>
  <div
    class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"
  >
    <!-- Navigation -->
    <nav class="bg-white/10 backdrop-blur-md border-b border-white/20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a
            href="/"
            class="flex items-center space-x-2 text-white hover:text-purple-300 transition-colors"
          >
            <ArrowLeft class="w-5 h-5" />
            <span>Back to Home</span>
          </a>
          <div class="text-white/60 text-sm">@{dev.username}</div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Profile Header -->
      <div
        class="bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 p-8 mb-8"
      >
        <div
          class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8"
        >
          {/* Avatar */}
          <div class="relative">
            {
              dev.avatar ? (
                <img
                  src={dev.avatar}
                  alt={`${dev.name}'s avatar`}
                  class="w-32 h-32 rounded-full border-4 border-white/20 shadow-2xl"
                />
              ) : (
                <div class="w-32 h-32 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-white text-4xl font-bold shadow-2xl">
                  {dev.name.charAt(0)}
                </div>
              )
            }
            <div
              class="absolute -bottom-2 -right-2 w-8 h-8 bg-green-400 rounded-full border-4 border-white/20"
            >
            </div>
          </div>

          {/* Profile Info */}
          <div class="flex-1 text-center md:text-left">
            <h1 class="text-4xl font-bold text-white mb-2">{dev.name}</h1>
            <p class="text-xl text-purple-300 mb-4">@{dev.username}</p>

            {
              dev.bio && (
                <p class="text-white/80 text-lg leading-relaxed max-w-2xl">
                  {dev.bio}
                </p>
              )
            }
          </div>
        </div>
      </div>

      {/* Social Links */}
      <div
        class="bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 p-8 mb-8"
      >
        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
          <Link class="w-6 h-6 mr-3" />
          Social Links
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {/* GitHub */}
          <a
            href={dev.github}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center space-x-3 p-4 bg-white/5 hover:bg-white/10 rounded-xl border border-white/10 hover:border-purple-400/50 transition-all duration-300 group"
          >
            <div
              class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center group-hover:bg-gray-700 transition-colors"
            >
              <Github class="w-6 h-6 text-white" />
            </div>
            <div>
              <p class="text-white font-medium">GitHub</p>
              <p class="text-white/60 text-sm">View repositories</p>
            </div>
          </a>

          {/* LinkedIn */}
          {
            dev.linkedin && (
              <a
                href={dev.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center space-x-3 p-4 bg-white/5 hover:bg-white/10 rounded-xl border border-white/10 hover:border-blue-400/50 transition-all duration-300 group"
              >
                <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center group-hover:bg-blue-500 transition-colors">
                  <Linkedin class="w-6 h-6 text-white" />
                </div>
                <div>
                  <p class="text-white font-medium">LinkedIn</p>
                  <p class="text-white/60 text-sm">Professional profile</p>
                </div>
              </a>
            )
          }

          {/* Website */}
          {
            dev.website && (
              <a
                href={dev.website}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center space-x-3 p-4 bg-white/5 hover:bg-white/10 rounded-xl border border-white/10 hover:border-green-400/50 transition-all duration-300 group"
              >
                <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center group-hover:bg-green-500 transition-colors">
                  <Globe class="w-6 h-6 text-white" />
                </div>
                <div>
                  <p class="text-white font-medium">Website</p>
                  <p class="text-white/60 text-sm">Personal website</p>
                </div>
              </a>
            )
          }
        </div>
      </div>

      {/* Slush Wallet */}
      {
        dev.slushWallet && (
          <div class="bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 p-8">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
              <Wallet class="w-6 h-6 mr-3" />
              Slush Wallet
            </h2>

            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
              <div class="flex items-center justify-between">
                <code class="text-white/80 font-mono text-sm break-all">
                  {dev.slushWallet}
                </code>
                <button
                  onclick="navigator.clipboard.writeText('{dev.slushWallet}')"
                  class="ml-4 p-2 bg-purple-600 hover:bg-purple-500 rounded-lg transition-colors"
                  title="Copy to clipboard"
                >
                  <Copy class="w-4 h-4 text-white" />
                </button>
              </div>
            </div>
          </div>
        )
      }
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-8 text-center text-white/60">
      <p>Built with ❤️ using Astro & Tailwind CSS</p>
    </footer>
  </div>
</Layout>
